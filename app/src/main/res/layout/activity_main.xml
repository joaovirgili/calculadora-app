<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline10"
            app:layout_constraintGuide_percent=".75"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline9" app:layout_constraintGuide_percent=".40"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/constraint_numbers"
            app:layout_constraintTop_toTopOf="@+id/guideline9" app:layout_constraintEnd_toStartOf="@+id/guideline10">
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline3"
                app:layout_constraintGuide_percent=".33"/>
        <android.support.constraint.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline4"
                app:layout_constraintGuide_percent=".66"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline6"
                app:layout_constraintGuide_percent=".25"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline7"
                app:layout_constraintGuide_percent=".50"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline8"
                app:layout_constraintGuide_percent=".75"/>
        <Button
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_calc_7" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintBottom_toTopOf="@+id/guideline6"/>
        <Button
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_calc_8"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintBottom_toTopOf="@+id/guideline6" app:layout_constraintHorizontal_bias="0.6"/>
        <Button
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_calc_9" app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/guideline6"/>
        <Button
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_calc_4" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline6" app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintBottom_toTopOf="@+id/guideline7"/>
        <Button
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_calc_5" app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintBottom_toTopOf="@+id/guideline7"
                app:layout_constraintTop_toBottomOf="@id/guideline6"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
        />
        <Button
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_calc_6"
                app:layout_constraintBottom_toTopOf="@+id/guideline7"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="@+id/guideline6" app:layout_constraintEnd_toEndOf="parent"
        />
        <Button
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_calc_1"
                app:layout_constraintTop_toTopOf="@+id/guideline7" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintBottom_toTopOf="@+id/guideline8"/>
        <Button
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_calc_2"
                app:layout_constraintTop_toTopOf="@+id/guideline7"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintBottom_toTopOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
        />
        <Button
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_calc_3"
                app:layout_constraintTop_toTopOf="@+id/guideline7"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintBottom_toTopOf="@+id/guideline8" app:layout_constraintEnd_toEndOf="parent"
        />
        <Button
                android:text="."
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_calc_dot"
                app:layout_constraintTop_toTopOf="@+id/guideline8" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <Button
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_calc_0"
                app:layout_constraintTop_toTopOf="@+id/guideline8"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline4"
        />
        <Button
                android:text="="
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_calc_equals"
                app:layout_constraintTop_toTopOf="@+id/guideline8"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@+id/guideline10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline9" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/constraint_operators">

        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline14"
                app:layout_constraintGuide_percent=".20"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline13"
                app:layout_constraintGuide_percent=".4"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline12"
                app:layout_constraintGuide_percent=".6"/>
        <android.support.constraint.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline11"
                app:layout_constraintGuide_percent=".8"/>
        <Button
                android:text="C"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_clear" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/guideline14" app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/clear_button"
                android:padding="8dp"
                android:layout_marginTop="6dp" android:layout_marginLeft="2dp" android:layout_marginStart="2dp"
                android:layout_marginRight="2dp" android:layout_marginEnd="2dp" android:layout_marginBottom="2dp"/>
        <Button
                android:text="/"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_div" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline14"
                app:layout_constraintBottom_toTopOf="@+id/guideline13" app:layout_constraintEnd_toEndOf="parent"
                android:background="#3FB5B5"
                android:layout_marginTop="2dp" android:layout_marginLeft="2dp" android:layout_marginStart="2dp"
                android:layout_marginRight="2dp" android:layout_marginEnd="2dp" android:layout_marginBottom="2dp"
        />
        <Button
                android:text="X"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_mul"
                app:layout_constraintTop_toTopOf="@+id/guideline13" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/guideline12" app:layout_constraintEnd_toEndOf="parent"
                android:background="#3FB5B5"
                android:layout_marginTop="2dp" android:layout_marginLeft="2dp" android:layout_marginStart="2dp"
                android:layout_marginRight="2dp" android:layout_marginEnd="2dp" android:layout_marginBottom="2dp"
        />
        <Button
                android:text="-"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_sub" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline12"
                app:layout_constraintBottom_toTopOf="@+id/guideline11" app:layout_constraintEnd_toEndOf="parent"
                android:background="#3FB5B5"
                android:layout_marginTop="2dp" android:layout_marginLeft="2dp" android:layout_marginStart="2dp"
                android:layout_marginRight="2dp" android:layout_marginEnd="2dp" android:layout_marginBottom="2dp"
        />
        <Button
                android:text="+"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_add" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline11"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:background="#3FB5B5"
                android:layout_marginTop="2dp" android:layout_marginLeft="2dp" android:layout_marginStart="2dp"
                android:layout_marginRight="2dp" android:layout_marginEnd="2dp" android:layout_marginBottom="2dp"
        />
    </android.support.constraint.ConstraintLayout>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:id="@+id/text_result"
            android:gravity="center_vertical"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toTopOf="@+id/guideline9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:maxLines="1" android:textSize="50sp"/>
</android.support.constraint.ConstraintLayout>